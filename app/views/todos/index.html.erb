

<div class="col-md-6">
  <%= render partial: @todos %>
</div>

<div class="col-md-6">
  <%= link_to "Delete last seven days", destroy_all_todo_path(@todos), class: 'btn btn-success', method: :delete %>
</div>

<div class="col-md-12">
  <%= form_tag(todos_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Todos" %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<div class = "col-md-12">
  <%= render partial: 'form', locals: { todo: @todo } %>
</div>